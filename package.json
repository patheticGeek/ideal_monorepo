{
  "name": "ideal_monorepo",
  "version": "0.0.1",
  "description": "My ideal monorepo with prisma, typescript, graphql, nextjs, tailwind",
  "scripts": {
    "prettier": "turbo run prettier",
    "prettier:fix": "turbo run prettier:fix",
    "lint": "esprint check",
    "lint:fix": "turbo run lint:fix",
    "verify": "turbo run prettier lint",
    "verify:fix": "turbo run prettier:fix lint:fix",
    "build": "turbo run build",
    "client:dev": "turbo run dev --filter=@server/core --filter=@apps/client",
    "server:dev": "turbo run dev --filter=@server/core",
    "tsc": "tsc",
    "prepare": "husky install"
  },
  "keywords": [
    "graphql",
    "nextjs",
    "typescript",
    "prisma",
    "tailwind"
  ],
  "author": "patheticGeek",
  "license": "ISC",
  "homepage": "https://github.com/patheticGeek/ideal_monorepo#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/patheticGeek/ideal_monorepo.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "server/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^7.30.0",
    "esprint": "^3.6.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prettier-config-standard": "^5.0.0",
    "tailwindcss": "^3.0.24",
    "turbo": "^1.2.14",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@modfy/eslint-config": "^0.1.1",
    "esbuild": "^0.14.41",
    "express": "^4.18.1",
    "husky": "^8.0.1",
    "next": "^12.1.6",
    "pretty-quick": "^3.1.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  }
}
